<% if box2.persisted? %>
  <tr>
    <td><%= box2_counter + 1 %></td>
    <td><%= box2.material.name %></td>
    <td><%= box2.material_weight %></td>
    <td><%= box2.location.name %></td>
    <td id="add-boxes"><%= link_to "Next Step", next_step_job_machine_box_path(box2.output_job_machine, box2), class: "btn btn-primary" if box2.ready_to_move_on_box? %></td>
    <td id="delete-boxes"><%= link_to "Delete", job_machine_box_path(box2.output_job_machine, box2), method: :delete, data: { confirm: 'Are you certain you want to delete this?' }, class: "btn btn-danger" %></td>
  </tr>
<% end %>
