<div class="col-lg-4 col-md-4">
  <%= simple_form_for [@job, @box], html: { class: 'form-horizontal' }, validate: true do |f| %>
    <%= f.association :location, as: :select, collection: Location.all.order(:name) %>
    <%= f.association :material, as: :select, collection: Material.all.order(:name) %>
      <%= f.input :material_weight, label: false do %>
        <%= f.label :material_weight %>
        <div class="input-group">
          <%= f.input_field :material_weight, :autofocus => true, class: 'form-control' %>
          <span class="input-group-addon">lbs</span>
        </div>
      <% end %>
    <%= f.button :submit, "Submit", class: "btn btn-success" %>
    <%= link_to "Home", root_path, class: "btn btn-default" %>
  <% end %>
  <% if @job.sum_of_raw_boxes > 0 %>
    <h4> Total Weight: <%= @job.sum_of_raw_boxes %> lbs</h4>
  <% else %>

  <% end %>
</div>
<div class="col-lg-2 col-md-2">

</div>
<div class="col-lg-6 col-md-6">
  <table class="table">
    <thead>
      <tr>
        <th> Box Number </th>
        <th> Material Type </th>
        <th> Box Weight </th>
        <th> Location </th>
        <th> Delete </th>
      </tr>
    </thead>
    <tbody>
      <%= render @boxes %>
    </tbody>
  </table>
  <% if @job.sum_of_raw_boxes > 0 %>
  <h4> Total Weight: <%= @job.sum_of_raw_boxes %> lbs</h4>
  <% else %>

  <% end %>
</div>
